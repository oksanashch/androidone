<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/cityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="14dp"
        android:text="@string/saint_petersburg"
        android:textSize="42dp"
        app:layout_constraintBottom_toTopOf="@+id/weatherСonditions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weatherСonditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="121dp"
        android:layout_marginLeft="121dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="121dp"
        android:layout_marginRight="121dp"
        android:layout_marginBottom="22dp"
        android:text="@string/partially_cloudy"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/temperature"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cityName" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="166dp"
        android:layout_marginLeft="166dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="167dp"
        android:layout_marginRight="167dp"
        android:layout_marginBottom="446dp"
        android:text="11°"
        android:textSize="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weatherСonditions" />

    <TextView
        android:id="@+id/todayData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="390dp"
        android:text="@string/today"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dayOFWeek"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weatherСonditions"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/dayOFWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="391dp"
        android:text="@string/thursday"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/todayData"
        app:layout_constraintTop_toBottomOf="@+id/cityName"
        app:layout_constraintVertical_bias="1.0" />

    <TableLayout
        android:id="@+id/weekDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todayData"
        app:layout_constraintVertical_bias="0.2">




        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="12dp"
                android:text="@string/friday"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:scaleType="center"
                android:src="@drawable/partlycloud"></ImageView>

            <TextView
                android:id="@+id/TextView4"
                android:layout_margin="12dp"
                android:gravity="center_horizontal"
                android:text="16°"
                android:textSize="20sp"></TextView>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="12dp"
                android:text="@string/saturday"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView5"
                android:scaleType="center"
                android:src="@drawable/rain">></ImageView>

            <TextView
                android:id="@+id/TextView5"
                android:layout_margin="12dp"
                android:gravity="center_horizontal"
                android:text="15°"
                android:textSize="20sp"></TextView>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="12dp"
                android:text="@string/sunday"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView6"
                android:scaleType="center"
                android:src="@drawable/rain"></ImageView>

            <TextView
                android:id="@+id/TextView6"
                android:layout_margin="12dp"
                android:gravity="center_horizontal"
                android:text="13°"
                android:textSize="20sp">
            </TextView>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="12dp"
                android:text="@string/monday"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView1"
                android:scaleType="center"
                android:src="@drawable/cloud"></ImageView>

            <TextView
                android:id="@+id/TextView1"
                android:layout_margin="12dp"
                android:gravity="center_horizontal"
                android:text="18°"
                android:textSize="20sp"></TextView>


        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="12dp"
                android:text="@string/wednesday"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:scaleType="center"
                android:src="@drawable/rain"></ImageView>

            <TextView
                android:id="@+id/TextView2"
                android:layout_margin="12dp"
                android:gravity="center_horizontal"
                android:text="14°"
                android:textSize="20sp"></TextView>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="12dp"
                android:text="@string/thursday"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:scaleType="center"
                android:src="@drawable/sun"></ImageView>

            <TextView
                android:id="@+id/TextView3"
                android:layout_margin="12dp"
                android:gravity="center_horizontal"
                android:text="21°"
                android:textSize="20sp"></TextView>

        </TableRow>


    </TableLayout>

    <ImageButton
        android:id="@+id/imageButton1"
        android:onClick="onClick"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/icon_list"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>